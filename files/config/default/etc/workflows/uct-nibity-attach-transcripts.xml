<?xml version="1.0" encoding="UTF-8"?>
<definition xmlns="http://workflow.opencastproject.org">
  <id>nibity-attach-transcripts</id>
  <title>Attach caption/transcripts generated by Nibity</title>
  <tags />
  <description>Attach transcription generated by the Nibity service.
    This is an internal workflow, started by the Transcription Service.
  </description>
  <configuration_panel />

  <operations>

    <!-- Apply the default workflow configuration -->
    <operation
            id="defaults"
            description="Applying default configuration values">
      <configurations>
        <configuration key="googleTranscript">true</configuration>
        <configuration key="uploadedTranscript">true</configuration>
        <configuration key="has-vtt">true</configuration>
        <configuration key="download-source-flavors">text/*,captions/*</configuration>
      </configurations>
    </operation>

    <!-- Check if event has been retracted -->
    <operation id="execute-once"
      max-attempts="3"
      retry-strategy="hold"
      fail-on-error="true"
      exception-handler-workflow="partial-error"
      description="Check if event has been retracted">
      <configurations>
        <configuration key="exec">/opt/opencast/wfexec/check-if-retracted.pl</configuration>
        <configuration key="load">0.1</configuration>
        <configuration key="params">#{id} #{out}</configuration>
        <configuration key="output-filename">retracted_event.txt</configuration>
        <configuration key="target-flavor">text/plain</configuration>
        <configuration key="set-workflow-properties">true</configuration>
        <configuration key="expected-type">Attachment</configuration>
      </configurations>
    </operation>

    <!-- Untag Google Speech captions -->
    <operation
            id="tag"
            description="Untag Google Speech captions">
      <configurations>
        <configuration key="source-flavors">captions/timedtext+en-US</configuration>
        <configuration key="target-tags">-engage-download</configuration>
      </configurations>
    </operation>

    <!-- Remove published transcripts -->
    <operation
            id="include"
            exception-handler-workflow="partial-error"
            description="Retract published transcripts from event">
      <configurations>
        <configuration key="workflow-id">uct-remove-transcripts</configuration>
      </configurations>
    </operation>

    <!-- Archive the current state of the mediapackage -->
    <operation
            id="snapshot"
            description="Archive the current state">
      <configurations>
        <configuration key="source-flavors">*/*</configuration>
      </configurations>
    </operation>

    <!-- Attach caption/transcript -->
    <operation id="nibity-attach-transcription"
      fail-on-error="true"
      exception-handler-workflow="partial-error"
      description="Attach captions/transcription">
      <configurations>
        <!-- This is filled out by the transcription service when starting this workflow -->
        <configuration key="transcription-job-id">${transcriptionJobId}</configuration>
        <!-- Caption generated will have the default flavor based on the target-caption-format and language e.g. captions/vtt+en -->
        <configuration key="target-flavor">captions/vtt+en-US</configuration>
        <configuration key="target-caption-format">vtt</configuration>
        <configuration key="target-tag">engage-download</configuration>
      </configurations>
    </operation>

    <!-- Merge caption/transcript to existing publication and republish -->
    <operation id="publish-engage"
      fail-on-error="true"
      if="NOT(${retracted_event})"
      exception-handler-workflow="partial-error"
      description="Distribute and publish to engage server">
      <configurations>
        <configuration key="download-source-flavors">dublincore/*,security/*</configuration>
        <configuration key="download-source-tags">engage-download</configuration>
        <configuration key="strategy">merge</configuration>
        <configuration key="check-availability">true</configuration>
      </configurations>
    </operation>

    <operation id="republish-oaipmh"
      if="NOT(${retracted_event})"
      exception-handler-workflow="partial-error"
      description="Update recording metadata in default OAI-PMH repository">
      <configurations>
        <configuration key="source-flavors">dublincore/*,security/*</configuration>
        <configuration key="download-source-tags">engage-download</configuration>
        <configuration key="repository">default</configuration>
      </configurations>
    </operation>

    <!-- Archive media package -->
    <operation id="snapshot"
      fail-on-error="true"
      exception-handler-workflow="partial-error"
      description="Archive media package">
      <configurations>
        <configuration key="source-flavors">*/*</configuration>
      </configurations>
    </operation>

    <!-- Send notification to the media package creator -->
    <operation
            id="execute-once"
            max-attempts="3"
            retry-strategy="hold"
            fail-on-error="true"
            exception-handler-workflow="partial-error"
            description="Load workflow properties from settings in series">
      <configurations>
        <configuration key="exec">/opt/opencast/wfexec/get_organizer_details.pl</configuration>
        <configuration key="load">0.1</configuration>
        <configuration key="params">#{id} #{out}</configuration>
        <configuration key="output-filename">series_organizer.txt</configuration>
        <configuration key="set-workflow-properties">true</configuration>
        <configuration key="expected-type">Attachment</configuration>
      </configurations>
    </operation>

    <!--  Send nibity transcription email -->
    <operation
            id="include"
            description="Send Nibity Transcription Email">
      <configurations>
        <configuration key="workflow-id">uct-include-nibity-transcription-email</configuration>
      </configurations>
    </operation>

    <!-- Clean up work artifacts -->
    <operation
        id="cleanup"
        fail-on-error="false"
        description="Remove temporary processing artifacts">
      <configurations>
        <configuration key="delete-external">true</configuration>
        <!-- FixMe Don't clean up ACLs until workflow service no longer looks for them in the WFR. -->
        <configuration key="preserve-flavors">security/*</configuration>
      </configurations>
    </operation>

  </operations>

</definition>

