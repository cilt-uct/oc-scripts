<?xml version="1.0" encoding="UTF-8"?>
<definition xmlns="http://workflow.opencastproject.org">

  <id>uct-include-before-edit-review</id>
  <title>UCT - Process for Editing (Review)</title>
  <tags/>
  <description>
    REQUIRES:
      Flavors:
        */work
      Workflow Properties:
        event_trim (true/false) [execute-once: event-timetable.pl]
        timetable_comment
        presenter_work_video (true/false) [analyze-tracks: */work]
        presentation_work_video
        presentation2_work_video

    Using the work flavors this workflow creates */preview versions for review.
  </description>

  <configuration_panel></configuration_panel>

  <operations>

    <!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
      Do the work to prepare for editing. (*/preview)
    -->
    <operation
      id="include"
      description="Prepare preview versions for Editing">
      <configurations>
        <configuration key="workflow-id">uct-partial-preview</configuration>
      </configurations>
    </operation>

    <!-- Add comments in order to mark the recording for editing if not empty venue -->
    <operation
      id="comment"
      if="${event_trim} AND NOT(${empty_venue})"
      description="Mark for editing">
      <configurations>
        <configuration key="description">${timetable_comment}</configuration>
        <configuration key="reason">EVENTS.EVENTS.DETAILS.COMMENTS.REASONS.CUTTING</configuration>
        <configuration key="action">create</configuration>
      </configurations>
    </operation>

    <!-- Add RESOLVED comment for empty venue -->
    <operation
      id="comment"
      if="${empty_venue}"
      description="Mark as empty venue">
      <configurations>
        <configuration key="description">Empty venue.</configuration>
        <configuration key="reason">EVENTS.EVENTS.DETAILS.COMMENTS.REASONS.REVIEW</configuration>
        <configuration key="action">create</configuration>
      </configurations>
    </operation>

    <operation
      id="comment"
      if="${empty_venue}"
      description="Mark as empty venue (resolve)">
      <configurations>
        <configuration key="description">Empty venue.</configuration>
        <configuration key="reason">EVENTS.EVENTS.DETAILS.COMMENTS.REASONS.REVIEW</configuration>
        <configuration key="action">resolve</configuration>
      </configurations>
    </operation>

    <!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
      Save, Archive and Cleanup
    -->

    <!-- Save workflow properties -->
    <operation
      id="export-wf-properties"
      fail-on-error="true"
      exception-handler-workflow="partial-error"
      description="Export workflow settings to Java properties file">
      <configurations>
        <configuration key="target-flavor">processing/defaults</configuration>
        <configuration key="target-tags">archive</configuration>
      </configurations>
    </operation>

    <!-- Archive generated items -->
    <operation
      id="snapshot"
      description="Archive work and preview information">
      <configurations>
        <configuration key="source-tags">archive</configuration>
        <!--configuration key="source-flavors">*/source,dublincore/*,security/*</configuration-->
      </configurations>
    </operation>

    <!-- Clean up work artifacts -->
    <operation
        id="cleanup"
        fail-on-error="false"
        description="Cleaning up - remove temp processing artifacts">
        <configurations>
            <configuration key="delete-external">false</configuration>
            <!-- FixMe Don't clean up ACLs until workflow service no longer looks for them in the WFR. -->
            <configuration key="preserve-flavors">dublincore/*,security/*</configuration>
            <configuration key="delay">5</configuration>
        </configurations>
    </operation>

  </operations>
</definition>
